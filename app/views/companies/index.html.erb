<h1 class='text-center'>Empresas</h1>
<div class='d-flex justify-content-end'>
  <%= link_to "Crear empresa", new_company_path(@company), class: 'btn-new-element w-25' %>
</div>
<table class="table table-hover text-center table-style">
  <thead>
    <tr>
      <th scope="col">Nombre</th>
      <th scope="col">Acciones para empresas</th>
      <th scope="col">Veh√≠culos registrados</th>
    </tr>
  </thead>
  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= company.name%></td>

        <td>
          <%= link_to "Editar", edit_company_path(company) %>
          <%= link_to "Borrar", company_path(company), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}%>
        </td>


        <td><%= link_to "Detalles", company_path(company) %></td>

      </tr>
    <% end %>
  </tbody>
</table>
