<div class="container d-flex justify-content-center">
    <%= render "devise/shared/error_messages", resource: resource %>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class:'p-4 form-sessions' }, data: {turbo: false}) do |f| %>
    <h2 class="text-center mb-3">Crear usuario</h2>

    <div class="field">
      <%= f.label :email, class: "my-1 w-100" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "my-1 w-100" %>
    </div>

    <div class="field">
      <%= f.label :password, class: "my-1 w-100" %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> caracteres min)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", class: "my-1 w-100" %>
    </div>

    <div class="field">
      <%= f.label :confirmar_password, class: "my-1 w-100" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "my-1 w-100" %>
    </div>

    <div class="field">
      <%= f.label :Nombre, class: "my-1 w-100" %><br />
      <%= f.text_field :first_name, autofocus: true, class: "my-1 w-100" %>
    </div>

    <div class="field">
      <%= f.label :Apellido, class: "my-1 w-100" %><br />
      <%= f.text_field :last_name, autofocus: true, class: "my-1 w-100" %>
    </div>

    <div class="field">
      <%= f.label :Turno, class: "my-1 w-100" %><br />
      <%= f.collection_select :shift, User::SHIFTS, :to_s, :to_s, prompt: 'Selecciona una opciÃ³n', class: "my-1 w-100" %>
    </div>

    <div class="field">
      <%= f.label :NÃºmero_de_empleado, class: "my-1 w-100" %><br />
      <%= f.text_field :employee_number, autofocus: true, class: "my-1 w-100" %>
    </div>

    <div class="field">
      <%= f.check_box(:admin) %>
      <%= f.label :Administrador, class: "my-1 w100" %> <br />
    </div>

    <div class="field">
      <%= f.check_box(:active) %>
      <%= f.label :Activo, class: "my-1 w100" %> <br />
    </div>

    <%= f.file_field :photo %>

    <div class="actions">
      <%= f.submit "Aceptar", class: 'submit-btn my-1 py-1' %>
    </div>
  <% end %>
</div>
